
<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>
<h1>投稿一覧</h1>

<table>
  <thead>
    <tr>
      <th>投稿者</th>
      <th>投稿</th>
      <th> 投稿画像</th>
      <th>投稿詳細</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.user.name %></td>
        <td><%= post.content %></td>
        <td>
          <% if post && post.photo.attached? %>
          <%= image_tag post.thumbnail([200, 200]) %>
          <% end %>       
        </td>
        <td><%= link_to '詳細', post_path(post) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to '新規投稿', posts_new_path %>